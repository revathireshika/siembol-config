{
  "rule_name": "linux_hostname",
  "rule_author": "siembol",
  "rule_version": 2,
  "source_type": "linux-syslog",
  "matchers": [
    {
      "is_enabled": true,
      "matcher_type": "REGEX_MATCH",
      "is_negated": false,
      "field": "syslog_hostname",
      "data": "mymachine.example.com"
    }
  ],
  "table_mapping": {
    "table_name": "linux_host",
    "joining_key": "hostname",
    "enriching_fields": [
      {
        "table_field_name": "syslog_hostname",
        "event_field_name": "enriched_hostname"
      }
    ]
  }
}