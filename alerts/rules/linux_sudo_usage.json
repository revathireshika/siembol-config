{
  "rule_name": "linux_sudo_usage",
  "rule_author": "siembol",
  "rule_version": 3,
  "rule_description": "Using sudo command",
  "source_type": "linux-syslog",
  "matchers": [
    {
      "is_enabled": true,
      "matcher_type": "CONTAINS",
      "is_negated": false,
      "field": "MESSAGE",
      "case_insensitive": false,
      "starts_with": true,
      "ends_with": false,
      "data": "sudo:"
    }
  ]
}