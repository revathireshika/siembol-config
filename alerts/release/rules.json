{
  "tags": [
    {
      "tag_name": "detection_source",
      "tag_value": "siembol_alerts"
    }
  ],
  "rules_protection": {
    "max_per_hour": 30,
    "max_per_day": 100
  },
  "rules_version": 7,
  "rules": [
    {
      "rule_name": "win_mimikatz",
      "rule_author": "siembol",
      "rule_version": 1,
      "rule_description": "Detect LSASS handling by Mimikatz",
      "source_type": "win_eventlogs",
      "matchers": [
        {
          "matcher_type": "IS_IN_SET",
          "is_negated": false,
          "field": "EventID",
          "case_insensitive": false,
          "data": "4656"
        },
        {
          "matcher_type": "REGEX_MATCH",
          "is_negated": false,
          "field": "ObjectName",
          "data": "^.*\\\\lsass.exe$"
        },
        {
          "matcher_type": "REGEX_MATCH",
          "is_negated": false,
          "field": "ProcessName",
          "data": "^.*\\\\mimikatz.exe$"
        }
      ],
      "rule_protection": {
        "max_per_hour": 30,
        "max_per_day": 100
      }
    },
    {
      "rule_name": "siembol_heartbeat",
      "rule_author": "siembol",
      "rule_version": 2,
      "source_type": "siembol_heartbeat",
      "matchers": [
        {
          "is_enabled": true,
          "matcher_type": "REGEX_MATCH",
          "is_negated": false,
          "field": "siembol_heartbeat",
          "data": "true"
        }
      ],
      "rule_protection": {
        "max_per_hour": 100,
        "max_per_day": 3000
      }
    },
    {
      "rule_name": "Suspicious_Activity_in_Shell_Commands",
      "rule_author": "siembol",
      "rule_version": 1,
      "rule_description": "Detects suspicious shell commands used in various exploit codes ",
      "source_type": "linux-syslog",
      "matchers": [
        {
          "is_enabled": true,
          "matcher_type": "REGEX_MATCH",
          "is_negated": false,
          "field": "original_string",
          "data": "\\Q*cd /tmp || cd /var/run || cd /mnt*\\E"
        }
      ],
      "tags": [
        {
          "tag_name": "sigma_id",
          "tag_value": "2aa1440c-9ae9-4d92-84a7-a9e5f5e31695"
        },
        {
          "tag_name": "sigma_tags",
          "tag_value": "[attack.execution, attack.susp.cmds]"
        }
      ],
      "rule_protection": {
        "max_per_hour": 30,
        "max_per_day": 100
      }
    },
    {
      "rule_name": "linux_sudo_usage",
      "rule_author": "siembol",
      "rule_version": 10,
      "rule_description": "Using sudo command",
      "source_type": "linux-syslog",
      "matchers": [
        {
          "is_enabled": true,
          "description": "sudo",
          "matcher_type": "IS_IN_SET",
          "is_negated": false,
          "field": "syslog_hostname",
          "case_insensitive": false,
          "data": "mymachine.example.com"
        }
      ]
    }
  ]
}